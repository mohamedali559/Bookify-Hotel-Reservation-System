@{
    ViewData["Title"] = "Book Your Stay";
}

@section Styles {
    <link rel="stylesheet" href="~/css/book.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
}

<section class="hero-section">
    <div class="hero-overlay"></div>
    <div>
        <h1>Book Your Stay</h1>
        <p>Reserve your room and complete your payment safely and securely.</p>
    </div>
</section>

<section id="room-details" class="room-details"></section>

<div class="booking-container">
    <h2>Reservation Details</h2>

    <form id="bookingForm">
        <div>
            <label for="name">Full Name</label>
            <input type="text" id="name" placeholder="Enter your full name" required>
        </div>

        <div>
            <label for="email">Email Address</label>
            <input type="email" id="email" placeholder="your.email@example.com" required>
        </div>

        <div>
            <label for="guests">Number of Guests</label>
            <select id="guests" required>
                <option value="">Select number of guests</option>
            </select>
        </div>

        <div>
            <label for="room">Selected Room</label>
            <select id="room" required disabled>
                <option value="">Loading...</option>
            </select>
        </div>

        <div>
            <label for="checkin">Check-in Date</label>
            <input type="date" id="checkin" required>
        </div>

        <div>
            <label for="checkout">Check-out Date</label>
            <input type="date" id="checkout" required>
        </div>

        <button type="button" id="goPayment" class="confirm-btn">
            <i class="fas fa-credit-card"></i> Proceed to Payment
        </button>
    </form>

    <div class="cancel-btn">
        <a href="/Room"><i class="fas fa-arrow-left"></i> Back to Rooms</a>
    </div>
</div>

@section Scripts {
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
    <script src="~/js/book.js"></script>
}
