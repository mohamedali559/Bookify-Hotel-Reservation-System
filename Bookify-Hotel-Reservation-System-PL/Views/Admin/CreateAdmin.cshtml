@model RegisterViewModel

@{
    ViewData["Title"] = "CreateAdmin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}
@section Styles {
    <link rel="stylesheet" href="~/css/login.css">
    <link rel="stylesheet" href="~/css/register.css">
}


<div class="login-wrapper">
    <div class="login-card">
        <div class="logo-header">
            <div class="logo-box-register">GH</div>
            <h1 class="logo-text-register">Golden Horizon</h1>
        </div>

        <h2>Add New Admin Account</h2>

        @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ErrorCount > 0)
        {
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-circle"></i>
                @Html.ValidationSummary(false, "", new { @class = "mb-0" })
            </div>
        }

        <form asp-controller="Admin" asp-action="CreateAdmin" method="post">
            
            <div class="form-group">
                <label asp-for="FullName">Full Name <span class="required">*</span></label>
                <input asp-for="FullName" type="text" placeholder="Enter your full name" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email">Email Address <span class="required">*</span></label>
                <input asp-for="Email" type="email" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="Password">Password <span class="required">*</span></label>
                    <input asp-for="Password" type="password" placeholder="Enter password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ConfirmPassword">Confirm Password <span class="required">*</span></label>
                    <input asp-for="ConfirmPassword" type="password" placeholder="Confirm password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="PhoneNumber">Phone Number</label>
                    <input asp-for="PhoneNumber" type="tel" placeholder="Enter phone number" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Address">Address</label>
                    <input asp-for="Address" type="text" placeholder="Enter your address" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>

            <button type="submit" class="login-btn">
                <i class="fas fa-user-plus"></i> Create Account
            </button>

        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
