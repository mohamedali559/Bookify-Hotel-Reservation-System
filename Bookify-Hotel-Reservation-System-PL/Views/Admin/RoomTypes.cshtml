@model IEnumerable<Bookify_Hotel_Reservation_System__DAL.Models.RoomType>

@{
    ViewData["Title"] = "Room Types Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="management-container">
    <!-- Header with Add Button -->
    <div class="management-header">
        <div>
            <h2><i class="fas fa-door-open"></i> Room Types Management</h2>
            <p class="text-muted">Define and manage different types of rooms</p>
        </div>
        <div class="management-actions">
            <a asp-controller="Admin" asp-action="Rooms" class="btn btn-secondary">
                <i class="fas fa-bed"></i> Back to Rooms
            </a>
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addRoomTypeModal">
                <i class="fas fa-plus"></i> Add Room Type
            </button>
        </div>
    </div>

    <!-- Room Types Table -->
    <div class="table-card">
        <div class="table-responsive">
            <table id="roomTypesTable" class="table table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Area (sq ft)</th>
                        <th>Guests</th>
                        <th>Base Price</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var roomType in Model)
                    {
                        <tr>
                            <td>@roomType.Id</td>
                            <td><strong>@roomType.Name</strong></td>
                            <td>@roomType.Description</td>
                            <td>@roomType.Area sq ft</td>
                            <td>
                                <span class="badge badge-guests">
                                    <i class="fas fa-users"></i> @roomType.Guests
                                </span>
                            </td>
                            <td><strong class="text-success">$@roomType.BasePrice.ToString("N2")</strong></td>
                            <td>
                                <div class="action-buttons">
                                    <button class="btn btn-sm btn-edit" 
                                            data-id="@roomType.Id" 
                                            data-name="@roomType.Name"
                                            data-description="@roomType.Description"
                                            data-area="@roomType.Area"
                                            data-guests="@roomType.Guests"
                                            data-price="@roomType.BasePrice"
                                            title="Edit Room Type">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button class="btn btn-sm btn-delete" data-id="@roomType.Id" title="Delete Room Type">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Add Room Type Modal -->
<div class="modal fade" id="addRoomTypeModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-plus"></i> Add New Room Type</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="addRoomTypeForm">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Name <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="roomTypeName" required placeholder="e.g., Deluxe Suite">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Base Price <span class="text-danger">*</span></label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input type="number" class="form-control" id="roomTypePrice" required placeholder="0.00" step="0.01" min="0">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Area (sq ft) <span class="text-danger">*</span></label>
                            <input type="number" class="form-control" id="roomTypeArea" required placeholder="e.g., 350" min="0">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Max Guests <span class="text-danger">*</span></label>
                            <input type="number" class="form-control" id="roomTypeGuests" required placeholder="e.g., 2" min="1">
                        </div>
                        <div class="col-12">
                            <label class="form-label">Description</label>
                            <textarea class="form-control" id="roomTypeDescription" rows="3" placeholder="Describe the room type features..."></textarea>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" form="addRoomTypeForm" class="btn btn-primary">
                    <i class="fas fa-save"></i> Add Room Type
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Edit Room Type Modal -->
<div class="modal fade" id="editRoomTypeModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-edit"></i> Edit Room Type</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="editRoomTypeForm">
                    <input type="hidden" id="editRoomTypeId">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Name <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="editRoomTypeName" required>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Base Price <span class="text-danger">*</span></label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input type="number" class="form-control" id="editRoomTypePrice" required step="0.01" min="0">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Area (sq ft) <span class="text-danger">*</span></label>
                            <input type="number" class="form-control" id="editRoomTypeArea" required min="0">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Max Guests <span class="text-danger">*</span></label>
                            <input type="number" class="form-control" id="editRoomTypeGuests" required min="1">
                        </div>
                        <div class="col-12">
                            <label class="form-label">Description</label>
                            <textarea class="form-control" id="editRoomTypeDescription" rows="3"></textarea>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" form="editRoomTypeForm" class="btn btn-primary">
                    <i class="fas fa-save"></i> Save Changes
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/admin-room-types.js"></script>
}
