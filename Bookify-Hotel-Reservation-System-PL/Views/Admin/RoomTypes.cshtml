@model Bookify_Hotel_Reservation_System_PL.Models.AdminRoomTypesViewModel

@{
    ViewData["Title"] = "Room Types Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="management-container">
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="management-header">
        <div>
            <h2><i class="fas fa-door-open"></i> Room Types Management</h2>
            <p class="text-muted">Define and manage different types of rooms</p>
        </div>
        <div class="management-actions">
            <a asp-controller="Admin" asp-action="Rooms" class="btn btn-secondary">
                <i class="fas fa-bed"></i> Back to Rooms
            </a>
            <a asp-controller="Admin" asp-action="AddRoomType" class="btn btn-primary">
                <i class="fas fa-plus"></i> Add Room Type
            </a>
        </div>
    </div>

    <div class="table-card">
        <div class="table-responsive">
            <table id="roomTypesTable" class="table table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Area (sq ft)</th>
                        <th>Guests</th>
                        <th>Base Price</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var roomType in Model.RoomTypes)
                    {
                        <tr>
                            <td>@roomType.Id</td>
                            <td><strong>@roomType.Name</strong></td>
                            <td>@roomType.Description</td>
                            <td>@roomType.Area sq ft</td>
                            <td>
                                <span class="badge badge-guests">
                                    <i class="fas fa-users"></i> @roomType.Guests
                                </span>
                            </td>
                            <td><strong class="text-success">$@roomType.BasePrice.ToString("N2")</strong></td>
                            <td>
                                <div class="action-buttons">
                                    <a asp-action="EditRoomType" asp-route-id="@roomType.Id" class="btn btn-sm btn-edit" title="Edit Room Type">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form asp-action="DeleteRoomType" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this room type? This may affect existing rooms.');">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@roomType.Id" />
                                        <button type="submit" class="btn btn-sm btn-delete" title="Delete Room Type">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#roomTypesTable').DataTable({
                responsive: true,
                pageLength: 10,
                order: [[0, 'asc']],
                language: {
                    search: "Search Room Types:",
                    lengthMenu: "Show _MENU_ room types per page"
                }
            });
        });
    </script>
}
