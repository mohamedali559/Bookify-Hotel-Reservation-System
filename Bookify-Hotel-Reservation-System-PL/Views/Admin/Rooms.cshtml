@model Bookify_Hotel_Reservation_System_PL.Models.AdminRoomsViewModel

@{
    ViewData["Title"] = "Rooms Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="management-container">
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="management-header">
        <div>
            <h2><i class="fas fa-bed"></i> Rooms Management</h2>
            <p class="text-muted">Manage all hotel rooms and their details</p>
        </div>
        <div class="management-actions">
            <a asp-controller="Admin" asp-action="RoomTypes" class="btn btn-secondary">
                <i class="fas fa-door-open"></i> Manage Room Types
            </a>
            <a asp-controller="Admin" asp-action="AddRoom" class="btn btn-primary">
                <i class="fas fa-plus"></i> Add Room
            </a>
        </div>
    </div>

    <div class="table-card">
        <div class="table-responsive">
            <table id="roomsTable" class="table table-hover">
                <thead>
                    <tr>
                        <th>Room ID</th>
                        <th>Room Number</th>
                        <th>Floor</th>
                        <th>Room Type</th>
                        <th>Price</th>
                        <th>Availability</th>
                        <th>Image</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var room in Model.Rooms)
                    {
                        <tr>
                            <td>@room.Id</td>
                            <td><strong>@room.RoomNumber</strong></td>
                            <td>Floor @room.Floor</td>
                            <td>
                                <span class="badge badge-room-type">@(room.RoomType?.Name ?? "N/A")</span>
                            </td>
                            <td><strong>$@(room.RoomType?.BasePrice.ToString("N2") ?? "0.00")</strong></td>
                            <td>
                                @if (room.IsAvailable)
                                {
                                    <span class="badge badge-success"><i class="fas fa-check"></i> Available</span>
                                }
                                else
                                {
                                    <span class="badge badge-danger"><i class="fas fa-times"></i> Occupied</span>
                                }
                            </td>
                            <td>
                                <img src="@room.ImageUrl" alt="Room Image" class="room-thumb" style="width:60px;height:60px;object-fit:cover;border-radius:4px;" />
                            </td>
                            <td>
                                <div class="action-buttons">
                                    <a asp-action="EditRoom" asp-route-id="@room.Id" class="btn btn-sm btn-edit" title="Edit Room">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form asp-action="DeleteRoom" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this room?');">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@room.Id" />
                                        <button type="submit" class="btn btn-sm btn-delete" title="Delete Room">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#roomsTable').DataTable({
                responsive: true,
                pageLength: 10,
                order: [[0, 'asc']],
                language: {
                    search: "Search Rooms:",
                    lengthMenu: "Show _MENU_ rooms per page"
                }
            });
        });
    </script>
}
