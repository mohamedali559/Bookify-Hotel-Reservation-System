@{
    ViewData["Title"] = "About Us";
}

<!-- About Section -->
<section class="about-section flex flex-col md:flex-row items-center justify-between py-12 px-4">
    <div class="about-text md:w-1/2 mb-8 md:mb-0">
        <h2 class="text-3xl font-semibold mb-4">Our Story</h2>
        <p>
            Golden Horizon has been welcoming guests from around the world with elegance and warmth.
            Our mission is to combine modern luxury with the comfort of home, providing a serene and unforgettable stay.
            Every detail, from our rooms to our amenities, has been thoughtfully designed to delight our guests.
        </p>
    </div>

    <div class="about-image md:w-1/2">
        <img src="https://images.unsplash.com/photo-1566073771259-6a8506099945?auto=format&fit=crop&w=800&q=80" alt="Hotel" class="rounded-lg shadow-lg w-full">
    </div>
</section>

<!-- Values Section -->
<section class="values-section py-12 px-4">
    <h2 class="text-3xl font-semibold mb-8 text-center">Our Values</h2>
    <div class="values-grid grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-6">
        <div class="value-card text-center p-6 bg-white rounded-lg shadow hover:shadow-lg transition duration-300">
            <i class="fas fa-star text-3xl mb-2 text-blue-600"></i>
            <h3 class="text-xl font-semibold mb-2">Excellence</h3>
            <p>We strive for the highest standards to ensure an exceptional experience.</p>
        </div>
        <div class="value-card text-center p-6 bg-white rounded-lg shadow hover:shadow-lg transition duration-300">
            <i class="fas fa-heart text-3xl mb-2 text-red-500"></i>
            <h3 class="text-xl font-semibold mb-2">Hospitality</h3>
            <p>Warmth and care are at the core of our service.</p>
        </div>
        <div class="value-card text-center p-6 bg-white rounded-lg shadow hover:shadow-lg transition duration-300">
            <i class="fas fa-leaf text-3xl mb-2 text-green-500"></i>
            <h3 class="text-xl font-semibold mb-2">Sustainability</h3>
            <p>We proudly follow eco-friendly practices.</p>
        </div>
        <div class="value-card text-center p-6 bg-white rounded-lg shadow hover:shadow-lg transition duration-300">
            <i class="fas fa-globe text-3xl mb-2 text-yellow-500"></i>
            <h3 class="text-xl font-semibold mb-2">Global Experience</h3>
            <p>Our diverse team provides a welcoming atmosphere for everyone.</p>
        </div>
    </div>
</section>

<!-- Mini Gallery -->
<section class="mini-gallery py-12 px-4 grid grid-cols-2 sm:grid-cols-4 gap-4">
    <img src="https://plus.unsplash.com/premium_photo-1661964301291-75df9dd37f23?w=600" alt="Lobby" class="rounded-lg shadow">
    <img src="https://images.unsplash.com/photo-1509600110300-21b9d5fedeb7?w=600" alt="Pool" class="rounded-lg shadow">
    <img src="https://images.unsplash.com/photo-1552566626-52f8b828add9?w=600" alt="Restaurant" class="rounded-lg shadow">
    <img src="https://images.unsplash.com/photo-1488345979593-09db0f85545f?w=600" alt="Spa" class="rounded-lg shadow">
</section>

@section Styles {
    <link rel="stylesheet" href="~/css/about.css" />
}

@section Scripts {
    <script src="~/js/about.js"></script>
}
