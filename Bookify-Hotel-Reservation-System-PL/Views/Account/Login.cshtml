@model LoginViewModel

@{
    ViewData["Title"] = "Golden Horizon - Login";
    Layout = "_HotelLayout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/login.css">
    <style>
        body {
            background-color: #e6f0fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #1e2d4d;
            margin: 0;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        .login-wrapper {
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 60px 20px;
            width: 100%;
            min-height: calc(100vh - 200px);
        }

        .login-card {
            background-color: #ffffff;
            padding: 40px;
            border-radius: 16px;
            box-shadow: 0 6px 25px rgba(37, 64, 143, 0.3);
            width: 100%;
            max-width: 420px;
            text-align: center;
        }

        .login-card h2 {
            color: #25408f;
            margin-bottom: 10px;
            font-size: 1.8rem;
        }

        .login-card .subtitle {
            color: #666;
            font-size: 0.95rem;
            margin-bottom: 25px;
        }

        .form-group {
            margin-bottom: 20px;
            text-align: left;
        }

        .form-group label {
            display: block;
            margin-bottom: 8px;
            color: #1e2d4d;
            font-weight: 600;
            font-size: 0.9rem;
        }

        .login-card input[type="email"],
        .login-card input[type="password"] {
            width: 100%;
            padding: 12px 15px;
            border: 1px solid #25408f;
            border-radius: 8px;
            background-color: #e6f0fa;
            color: #1e2d4d;
            font-size: 1rem;
            transition: 0.3s;
            box-sizing: border-box;
        }

        .login-card input:focus {
            outline: none;
            box-shadow: 0 0 8px rgba(37, 64, 143, 0.5);
            transform: translateY(-2px);
        }

        .form-check {
            text-align: left;
            margin-bottom: 20px;
        }

        .form-check-input {
            width: 18px;
            height: 18px;
            margin-top: 0.15em;
        }

        .form-check-label {
            margin-left: 8px;
            color: #1e2d4d;
            font-size: 0.9rem;
        }

        .login-btn {
            width: 100%;
            padding: 12px;
            border: none;
            border-radius: 8px;
            background-color: #25408f;
            color: #ffffff;
            font-weight: bold;
            cursor: pointer;
            transition: background 0.3s, transform 0.2s;
            font-size: 1.1rem;
        }

        .login-btn:hover {
            background-color: #4169c7;
            transform: translateY(-2px);
        }

        .extra-options {
            margin-top: 20px;
            font-size: 0.9rem;
            color: #1e2d4d;
        }

        .extra-options a {
            color: #25408f;
            text-decoration: none;
            transition: color 0.2s;
        }

        .extra-options a:hover {
            color: #4169c7;
            text-decoration: underline;
        }

        .text-danger {
            color: #dc3545;
            font-size: 0.875rem;
            margin-top: 5px;
            text-align: left;
        }

        .alert {
            border-radius: 10px;
            margin-bottom: 20px;
            text-align: left;
        }

        .logo-header {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            margin-bottom: 30px;
        }

        .logo-box-login {
            background-color: #08306C;
            color: white;
            font-weight: bold;
            padding: 8px 16px;
            border-radius: 8px;
            font-size: 1.2rem;
        }

        .logo-text-login {
            font-size: 1.5rem;
            font-weight: 600;
            color: #25408f;
        }
    </style>
}

<div class="login-wrapper">
    <div class="login-card">
        <div class="logo-header">
            <div class="logo-box-login">GH</div>
            <h1 class="logo-text-login">Golden Horizon</h1>
        </div>

        <h2>Welcome Back!</h2>
        <p class="subtitle">Sign in to continue to your account</p>

        @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ErrorCount > 0)
        {
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-circle"></i>
                @Html.ValidationSummary(false, "", new { @class = "mb-0" })
            </div>
        }

        <form asp-controller="Account" asp-action="Login" method="post">
            <input type="hidden" asp-for="@ViewData["ReturnUrl"]" />

            <div class="form-group">
                <label asp-for="Email">Email Address</label>
                <input asp-for="Email" type="email" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password">Password</label>
                <input asp-for="Password" type="password" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-check">
                <input asp-for="RememberMe" class="form-check-input" type="checkbox" />
                <label asp-for="RememberMe" class="form-check-label">
                    Remember me
                </label>
            </div>

            <button type="submit" class="login-btn">
                <i class="fas fa-sign-in-alt"></i> Log In
            </button>

            <div class="extra-options">
                <p>Don't have an account? <a asp-controller="Account" asp-action="Register">Create one</a></p>
                <p><a href="#">Forgot Password?</a></p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
