@model LoginViewModel

@{
    ViewData["Title"] = "Golden Horizon - Login";
    Layout = "_HotelLayout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/login.css">
    <link rel="stylesheet" href="~/css/register.css">
}

<div class="login-wrapper">
    <div class="login-card">
        <!-- Logo Header like Register Page -->
        <div class="logo-header">
            <div class="logo-box-register">GH</div>
            <h1 class="logo-text-register">Golden Horizon</h1>
        </div>

        <h2>Sign In</h2>
        <p class="subtitle">Welcome back! Please login to your account</p>

        @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ErrorCount > 0)
        {
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-circle"></i>
                @Html.ValidationSummary(false, "", new { @class = "mb-0" })
            </div>
        }

        <form asp-controller="Account" asp-action="Login" method="post">
            <!-- Email -->
            <div class="form-group">
                <label asp-for="Email">Email Address</label>
                <input asp-for="Email" type="email" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- Password -->
            <div class="form-group">
                <label asp-for="Password">Password</label>
                <input asp-for="Password" type="password" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <!-- Remember Me -->
            <div class="form-group remember-me-group">
                <label class="custom-checkbox">
                    Remember Me
                    <input asp-for="RememberMe" type="checkbox" />
                    <span class="checkmark"></span>
                </label>
            </div>

            <!-- Login Button -->
            <button type="submit" class="login-btn">
                <i class="fas fa-sign-in-alt"></i> Sign In
            </button>

            <div class="extra-options">
                <p>Don't have an account? <a asp-controller="Account" asp-action="Register">Create Account</a></p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
