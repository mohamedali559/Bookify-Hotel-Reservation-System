@{
    ViewData["Title"] = "Access Denied";
    Layout = "_HotelLayout";
}

@section Styles {
    <style>
        .access-denied-wrapper {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: calc(100vh - 200px);
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 60px 20px;
        }

        .access-denied-container {
            background: white;
            border-radius: 20px;
            padding: 60px 40px;
            text-align: center;
            max-width: 600px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        }

        .access-denied-icon {
            font-size: 100px;
            color: #f44336;
            margin-bottom: 30px;
            animation: shake 0.5s ease-in-out;
        }

        @@keyframes shake {
            0%, 100% { transform: translateX(0); }
            25% { transform: translateX(-10px); }
            75% { transform: translateX(10px); }
        }

        .access-denied-container h1 {
            color: #333;
            font-size: 2.5rem;
            margin-bottom: 15px;
            font-weight: bold;
        }

        .access-denied-container p {
            color: #666;
            font-size: 1.1rem;
            margin-bottom: 30px;
            line-height: 1.6;
        }

        .btn-container {
            display: flex;
            gap: 15px;
            justify-content: center;
            flex-wrap: wrap;
        }

        .btn-action {
            padding: 12px 30px;
            border-radius: 10px;
            font-size: 1rem;
            font-weight: 600;
            text-decoration: none;
            transition: all 0.3s;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

        .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(102, 126, 234, 0.3);
            color: white;
        }

        .btn-secondary {
            background: white;
            color: #667eea;
            border: 2px solid #667eea;
        }

        .btn-secondary:hover {
            background: #f0f0f0;
            color: #667eea;
        }

        .error-code {
            color: #999;
            font-size: 0.9rem;
            margin-top: 30px;
        }
    </style>
}

<div class="access-denied-wrapper">
    <div class="access-denied-container">
        <div class="access-denied-icon">
            <i class="fas fa-ban"></i>
        </div>
        
        <h1>Access Denied</h1>
        
        <p>
            Sorry, you don't have permission to access this page.<br />
            This area is restricted to authorized users only.
        </p>

        <div class="btn-container">
            <a href="@Url.Action("Index", "Home")" class="btn-action btn-primary">
                <i class="fas fa-home"></i> Go to Home
            </a>
            
            @if (User.Identity?.IsAuthenticated == true)
            {
                <a href="javascript:history.back()" class="btn-action btn-secondary">
                    <i class="fas fa-arrow-left"></i> Go Back
                </a>
            }
            else
            {
                <a href="@Url.Action("Login", "Account")" class="btn-action btn-secondary">
                    <i class="fas fa-sign-in-alt"></i> Login
                </a>
            }
        </div>

        <div class="error-code">
            Error Code: 403 - Forbidden
        </div>
    </div>
</div>
