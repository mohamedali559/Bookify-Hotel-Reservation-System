@{
    ViewData["Title"] = "Access Denied";
    Layout = "_HotelLayout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/access-denied.css">
}

<div class="access-denied-wrapper">
    <div class="access-denied-container">
        <div class="access-denied-icon">
            <i class="fas fa-ban"></i>
        </div>
        
        <h1>Access Denied</h1>
        
        <p>
            Sorry, you don't have permission to access this page.<br />
            This area is restricted to authorized users only.
        </p>

        <div class="btn-container">
            <a href="@Url.Action("Index", "Home")" class="btn-action btn-primary">
                <i class="fas fa-home"></i> Go to Home
            </a>
            
            @if (User.Identity?.IsAuthenticated == true)
            {
                <a href="javascript:history.back()" class="btn-action btn-secondary">
                    <i class="fas fa-arrow-left"></i> Go Back
                </a>
            }
            else
            {
                <a href="@Url.Action("Login", "Account")" class="btn-action btn-secondary">
                    <i class="fas fa-sign-in-alt"></i> Login
                </a>
            }
        </div>

        <div class="error-code">
            Error Code: 403 - Forbidden
        </div>
    </div>
</div>
