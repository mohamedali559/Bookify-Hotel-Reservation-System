@model RegisterViewModel

@{
    ViewData["Title"] = "Golden Horizon - Register";
    Layout = "_HotelLayout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/login.css">
    <style>
        body {
            background-color: #e6f0fa;
        }

        .login-wrapper {
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 60px 20px;
            width: 100%;
            min-height: calc(100vh - 200px);
        }

        .login-card {
            background-color: #ffffff;
            padding: 40px;
            border-radius: 16px;
            box-shadow: 0 6px 25px rgba(37, 64, 143, 0.3);
            width: 100%;
            max-width: 500px;
            text-align: center;
        }

        .login-card h2 {
            color: #25408f;
            margin-bottom: 10px;
            font-size: 1.8rem;
        }

        .login-card .subtitle {
            color: #666;
            font-size: 0.95rem;
            margin-bottom: 25px;
        }

        .form-group {
            margin-bottom: 18px;
            text-align: left;
        }

        .form-group label {
            display: block;
            margin-bottom: 8px;
            color: #1e2d4d;
            font-weight: 600;
            font-size: 0.9rem;
        }

        .login-card input[type="text"],
        .login-card input[type="email"],
        .login-card input[type="password"],
        .login-card input[type="tel"] {
            width: 100%;
            padding: 12px 15px;
            border: 1px solid #25408f;
            border-radius: 8px;
            background-color: #e6f0fa;
            color: #1e2d4d;
            font-size: 1rem;
            transition: 0.3s;
            box-sizing: border-box;
        }

        .login-card input:focus {
            outline: none;
            box-shadow: 0 0 8px rgba(37, 64, 143, 0.5);
            transform: translateY(-2px);
        }

        .form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 15px;
        }

        .login-btn {
            width: 100%;
            padding: 12px;
            border: none;
            border-radius: 8px;
            background-color: #25408f;
            color: #ffffff;
            font-weight: bold;
            cursor: pointer;
            transition: background 0.3s, transform 0.2s;
            font-size: 1.1rem;
            margin-top: 10px;
        }

        .login-btn:hover {
            background-color: #4169c7;
            transform: translateY(-2px);
        }

        .extra-options {
            margin-top: 20px;
            font-size: 0.9rem;
            color: #1e2d4d;
        }

        .extra-options a {
            color: #25408f;
            text-decoration: none;
            transition: color 0.2s;
        }

        .extra-options a:hover {
            color: #4169c7;
            text-decoration: underline;
        }

        .text-danger {
            color: #dc3545;
            font-size: 0.875rem;
            margin-top: 5px;
            display: block;
            text-align: left;
        }

        .alert {
            border-radius: 10px;
            margin-bottom: 20px;
            text-align: left;
        }

        .logo-header {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            margin-bottom: 30px;
        }

        .logo-box-register {
            background-color: #08306C;
            color: white;
            font-weight: bold;
            padding: 8px 16px;
            border-radius: 8px;
            font-size: 1.2rem;
        }

        .logo-text-register {
            font-size: 1.5rem;
            font-weight: 600;
            color: #25408f;
        }

        .required {
            color: #dc3545;
        }

        @@media (max-width: 768px) {
            .form-row {
                grid-template-columns: 1fr;
                gap: 0;
            }

            .login-card {
                padding: 30px 20px;
            }
        }
    </style>
}

<div class="login-wrapper">
    <div class="login-card">
        <div class="logo-header">
            <div class="logo-box-register">GH</div>
            <h1 class="logo-text-register">Golden Horizon</h1>
        </div>

        <h2>Create Account</h2>
        <p class="subtitle">Start your journey with us today</p>

        @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ErrorCount > 0)
        {
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-circle"></i>
                @Html.ValidationSummary(false, "", new { @class = "mb-0" })
            </div>
        }

        <form asp-controller="Account" asp-action="Register" method="post">
            <div class="form-group">
                <label asp-for="FullName">Full Name <span class="required">*</span></label>
                <input asp-for="FullName" type="text" placeholder="Enter your full name" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email">Email Address <span class="required">*</span></label>
                <input asp-for="Email" type="email" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="Password">Password <span class="required">*</span></label>
                    <input asp-for="Password" type="password" placeholder="Enter password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ConfirmPassword">Confirm Password <span class="required">*</span></label>
                    <input asp-for="ConfirmPassword" type="password" placeholder="Confirm password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="PhoneNumber">Phone Number</label>
                    <input asp-for="PhoneNumber" type="tel" placeholder="Enter phone number" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Address">Address</label>
                    <input asp-for="Address" type="text" placeholder="Enter your address" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>

            <button type="submit" class="login-btn">
                <i class="fas fa-user-plus"></i> Create Account
            </button>

            <div class="extra-options">
                <p>Already have an account? <a asp-controller="Account" asp-action="Login">Login here</a></p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
