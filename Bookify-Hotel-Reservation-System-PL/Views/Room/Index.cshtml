@model List<RoomDetailsViewModel>

@{
    ViewData["Title"] = "Rooms";
}

@section Styles {
    <link rel="stylesheet" href="~/css/RoomsStyle.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
}

<!-- Toast & Cart -->
<div class="cart" id="main-cart">
    <i class="fas fa-shopping-cart"></i> <span id="cart-count">0</span>
</div>
<div id="cart-popup">
    <h3>Your Selected Rooms</h3>
    <div id="cart-items"></div>
    <button id="go-reservation" class="cart-button">Go to Reservation</button>
</div>
<div id="toast"></div>

<!-- Section Header -->
<div class="section-header">
    <h2>Our Rooms & Suites</h2>
    <div class="divider"></div>
    <p>Explore our stylish rooms and suites with comfort, views, and modern amenities</p>
</div>

<!-- Filters Section -->
<div style="max-width: 1280px; margin: 0 auto; padding: 0 20px;">
    <div class="filters-container">
        <!-- Search -->
        <div class="filter-item">
            <label for="search-room">Search Room</label>
            <input type="text" name="searchText" id="search-room" placeholder="Enter keyword..."
                   value="@(ViewData["SearchText"] ?? "")" />
        </div>

        <!-- Room Type -->
        <div class="filter-item">
            <label for="room-type">Room Type</label>
            <select id="room-type" name="roomType">
                <option value="">Any</option>
                @if (ViewBag.RoomTypeName != null)
                {
                    @foreach (var type in ViewBag.RoomTypeName)
                    {
                        if ((ViewData["RoomType"]?.ToString() ?? "") == type)
                        {
                            <option value="@type" selected>@type</option>
                        }
                        else
                        {
                            <option value="@type">@type</option>
                        }
                    }
                }
            </select>
        </div>

        <!-- Guests -->
        <div class="filter-item">
            <label for="guests">Guests</label>
            <select id="guests" name="guests">
                <option value="">Any</option>
                @for (int i = 1; i <= 4; i++)
                {
                    if ((ViewData["Guests"]?.ToString() ?? "") == i.ToString())
                    {
                        <option value="@i" selected>@i Guest@(i > 1 ? "s" : "")</option>
                    }
                    else
                    {
                        <option value="@i">@i Guest@(i > 1 ? "s" : "")</option>
                    }
                }
            </select>
        </div>

        <!-- Price -->
        <div class="filter-item">
            <label for="price-select">Max Price</label>
            <select id="price-select" name="price">
                <option value="">Any</option>
                @{
                    var selectedPrice = ViewData["Price"]?.ToString() ?? "";
                }
                @if (selectedPrice == "800-1000")
                {
                    <option value="800-1000" selected>$800 - $1000</option>
                }
                else
                {
                    <option value="800-1000">$800 - $1000</option>
                }
                @if (selectedPrice == "1000-2000")
                {
                    <option value="1000-2000" selected>$1000 - $2000</option>
                }
                else
                {
                    <option value="1000-2000">$1000 - $2000</option>
                }
                @if (selectedPrice == "2000-3000")
                {
                    <option value="2000-3000" selected>$2000 - $3000</option>
                }
                else
                {
                    <option value="2000-3000">$2000 - $3000</option>
                }
                @if (selectedPrice == "3000-5000")
                {
                    <option value="3000-5000" selected>$3000 - $5000</option>
                }
                else
                {
                    <option value="3000-5000">$3000 - $5000</option>
                }
            </select>
        </div>
    </div>
</div>

<!-- Rooms Container -->
<div id="rooms-container">
    @if (Model != null && Model.Any())
    {
        @foreach (var room in Model)
        {
            <div class="room-card">
                <img src="@room.ImageUrl" alt="@room.RoomTypeName">
                <div class="room-info">
                    <h3>@room.RoomTypeName</h3>
                    <p>@room.RoomDescription</p>
                    <div class="features">
                        <span><i class="fas fa-user-friends"></i> @room.Guests Guests</span>
                        <span><i class="fas fa-vector-square"></i> @room.Area m²</span>
                        <span><i class="fas fa-layer-group"></i> Floor @room.Floor</span>
                        <span><i class="fas fa-dollar-sign"></i> $@room.BasePrice</span>
                    </div>               
                    <div class="room-buttons">
                        <button class="add-cart" data-room-id="@room.RoomId" 
                                data-room-type="@room.RoomTypeName"
                                data-room-description="@room.RoomDescription"
                                data-image-url="@room.ImageUrl"
                                data-base-price="@room.BasePrice"
                                data-guests="@room.Guests"
                                data-area="@room.Area"
                                data-floor="@room.Floor">
                            <i class="fas fa-cart-plus"></i> Add to Cart
                        </button>
                        <a asp-controller="Room" asp-action="Details" asp-route-id="@room.RoomId" class="view-details">
                            View Details
                        </a>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <p class="loading-message">No rooms available at the moment.</p>
    }
</div>

@section Scripts {
    <script src="~/js/rooms-client-filter.js"></script>
}
