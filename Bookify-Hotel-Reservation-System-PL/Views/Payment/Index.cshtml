@{
    ViewData["Title"] = "Secure Payment";
   
}

<!-- تضمين Tailwind و Stripe -->
<script src="https://cdn.tailwindcss.com"></script>
<script src="https://js.stripe.com/v3/"></script>
<link rel="stylesheet" href="css/payment.css">

<div class="card-container">
    <h2 class="title">Payment Information</h2>
    <div class="space-y-5">
        <div>
            <label class="font-semibold">Full Name</label>
            <input id="name" type="text" class="w-full p-3 rounded-lg" readonly />
        </div>

        <div>
            <label class="font-semibold">Email</label>
            <input id="email" type="email" class="w-full p-3 rounded-lg" readonly />
        </div>

        <div>
            <label class="font-semibold">Card Number</label>
            <div id="card-element" class="p-4 rounded-lg bg-white shadow-inner"></div>
        </div>

        <button id="pay-btn" class="w-full bg-[#25408f] text-white py-3 rounded-lg font-bold text-lg hover:bg-[#4169c7] transition">
            Pay Now
        </button>
    </div>
</div>

<!-- Invoice Section -->
<div class="invoice" id="invoice-box">
    <div class="text-center mb-6">
        <h2 class="text-3xl font-bold text-[#25408f]">Invoice</h2>
        <p class="text-sm text-gray-600">Golden Horizon Hotel</p>
    </div>

    <div class="border rounded-xl p-6 bg-white shadow-md" id="invoice-content-wrapper">
        <div class="grid grid-cols-2 gap-4 text-lg" id="invoice-content"></div>

        <div class="mt-6 border-t pt-4 text-right">
            <p class="text-xl font-bold">
                Total: <span id="total-price" class="text-[#25408f]"></span>
            </p>
        </div>
    </div>

    <button id="download-pdf" class="mt-5 w-full bg-[#25408f] text-white py-3 rounded-lg font-bold text-lg hover:bg-[#4169c7] transition">
        Download Your Invoice
    </button>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.9.3/html2pdf.bundle.min.js"></script>
<script src="js/payment.js"></script>
