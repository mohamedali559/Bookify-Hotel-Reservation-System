@{
    ViewData["Title"] = "Contact";
}

<!-- Hero Section -->
<section class="hero-section relative bg-gray-800 h-64 flex items-center justify-center text-center">
    <div class="hero-overlay absolute inset-0 bg-black opacity-50"></div>
    <div class="hero-text relative z-10 text-white">
        <h1 class="text-4xl font-bold mb-2">Contact Us</h1>
        <p>We’re here to help! Reach out for inquiries, reservations, or any questions about your stay.</p>
    </div>
</section>

<!-- Contact Section -->
<section class="contact-section flex flex-col md:flex-row py-12 px-4 gap-8">
    <!-- Contact Info -->
    <div class="contact-info md:w-1/2 space-y-4">
        <div><i class="fas fa-map-marker-alt mr-2"></i>123 Horizon Street, Paradise City</div>
        <div><i class="fas fa-phone-alt mr-2"></i>+20 123 456 7890</div>
        <div><i class="fas fa-envelope mr-2"></i>info@goldenhorizon.com</div>
        <div class="map-container mt-4">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3450.879270590917!2d31.23638921508895!3d30.044419981887947!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x145840c2d7a536eb%3A0x882e4c2e4f8b4f83!2sCairo%2C%20Egypt!5e0!3m2!1sen!2sus!4v1600000000000!5m2!1sen!2sus" width="100%" height="300" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
        </div>
    </div>

    <!-- Contact Form -->
    <div class="contact-form md:w-1/2">
        <form>
            <input type="text" placeholder="Your Name" required class="w-full mb-4 p-2 border rounded">
            <input type="email" placeholder="Your Email" required class="w-full mb-4 p-2 border rounded">
            <textarea rows="5" placeholder="Your Message" required class="w-full mb-4 p-2 border rounded"></textarea>
            <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition">Send Message</button>
        </form>
    </div>
</section>

@section Styles {
    <link rel="stylesheet" href="~/css/contact.css" />
}

@section Scripts {
    <script src="~/js/contact.js"></script>
}
