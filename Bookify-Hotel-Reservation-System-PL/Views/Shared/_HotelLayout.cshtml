<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Golden Horizon</title>
    <link rel="icon" type="image/png" href="https://cdn-icons-png.flaticon.com/512/2357/2357000.png">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/LayoutStyle.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Bookify_Hotel_Reservation_System_PL.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
    <style>
        /* User Dropdown Container */
        .user-dropdown {
            position: relative;
            display: inline-block;
        }

        /* Dropdown Toggle Button */
        .user-dropdown-toggle {
            background: linear-gradient(135deg, #08306C 0%, #064273 100%);
            border: none;
            color: #ffffff;
            cursor: pointer;
            padding: 10px 18px;
            font-size: 14px;
            font-weight: 500;
            display: flex;
            align-items: center;
            gap: 10px;
            border-radius: 25px;
            transition: all 0.3s ease;
            box-shadow: 0 2px 8px rgba(8, 48, 108, 0.2);
        }

        .user-dropdown-toggle:hover {
            background: linear-gradient(135deg, #064273 0%, #08306C 100%);
            box-shadow: 0 4px 12px rgba(8, 48, 108, 0.3);
            transform: translateY(-1px);
        }

        .user-dropdown-toggle i.fa-user-circle {
            font-size: 18px;
        }

        .user-dropdown-toggle i.fa-chevron-down {
            font-size: 10px;
            transition: transform 0.3s ease;
        }

        .user-dropdown.show .user-dropdown-toggle i.fa-chevron-down {
            transform: rotate(180deg);
        }

        /* Dropdown Menu */
        .user-dropdown-menu {
            display: none;
            position: absolute;
            right: 0;
            top: calc(100% + 12px);
            background: #ffffff;
            min-width: 220px;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
            border-radius: 12px;
            z-index: 1000;
            overflow: hidden;
            border: 1px solid rgba(0, 0, 0, 0.05);
            animation: slideDown 0.3s ease;
        }

        @@keyframes slideDown {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .user-dropdown-menu.show {
            display: block;
        }

        /* Dropdown Menu Items */
        .user-dropdown-menu a,
        .user-dropdown-menu button {
            display: flex;
            align-items: center;
            width: 100%;
            padding: 14px 20px;
            text-decoration: none;
            color: #333333;
            border: none;
            background: none;
            text-align: left;
            cursor: pointer;
            transition: all 0.2s ease;
            font-size: 14px;
            font-weight: 400;
            gap: 12px;
        }

        .user-dropdown-menu a:hover,
        .user-dropdown-menu button:hover {
            background: linear-gradient(90deg, rgba(8, 48, 108, 0.08) 0%, rgba(59, 130, 246, 0.08) 100%);
            color: #08306C;
            padding-left: 24px;
        }

        .user-dropdown-menu a i,
        .user-dropdown-menu button i {
            width: 20px;
            text-align: center;
            font-size: 15px;
            color: #08306C;
        }

        /* Dropdown Divider */
        .dropdown-divider {
            height: 1px;
            background: linear-gradient(90deg, transparent 0%, #e0e0e0 50%, transparent 100%);
            margin: 8px 12px;
        }

        /* Logout Button Special Styling */
        .user-dropdown-menu form button {
            color: #dc2626;
        }

        .user-dropdown-menu form button:hover {
            background: rgba(220, 38, 38, 0.08);
            color: #b91c1c;
        }

        .user-dropdown-menu form button i {
            color: #dc2626;
        }

        .user-dropdown-menu form button:hover i {
            color: #b91c1c;
        }

        /* Arrow Indicator */
        .user-dropdown-menu::before {
            content: '';
            position: absolute;
            top: -6px;
            right: 20px;
            width: 12px;
            height: 12px;
            background: white;
            border-left: 1px solid rgba(0, 0, 0, 0.05);
            border-top: 1px solid rgba(0, 0, 0, 0.05);
            transform: rotate(45deg);
        }

        /* Mobile Responsive */
        @@media screen and (max-width: 768px) {
            .user-dropdown-menu {
                min-width: 200px;
                right: -10px;
            }

            .user-dropdown-toggle {
                padding: 8px 14px;
                font-size: 13px;
            }
        }
    </style>
</head>

<body>
    @{
        var currentController = ViewContext.RouteData.Values["Controller"]?.ToString();
        var isAuthenticated = User?.Identity?.IsAuthenticated ?? false;
        var userName = User?.Identity?.Name ?? "Guest";
        var isAdmin = User?.IsInRole("Admin") ?? false;
    }

    <nav class="navbar">
        <div class="container navbar-container d-flex justify-content-between align-items-center w-100">

            <!-- Logo -->
            <div class="logo-section d-flex align-items-center gap-2">
                <div class="logo-box">GH</div>
                <h1 class="logo-text">Golden Horizon</h1>
            </div>

            <!-- Nav Links -->
            <div class="nav-links d-flex align-items-center gap-3" id="nav-links">
                @if (!isAdmin)
                {
                    <a asp-controller="Home" asp-action="Index" class="@(currentController == "Home" ? "active" : "")">
                        <i class="fas fa-home"></i> Home
                    </a>
                    <a asp-controller="Room" asp-action="Index" class="@(currentController == "Room" ? "active" : "")">
                        <i class="fas fa-bed"></i> Rooms
                    </a>
                    <a asp-controller="Amenity" asp-action="Index" class="@(currentController == "Amenity" ? "active" : "")">
                        <i class="fas fa-concierge-bell"></i> Amenities
                    </a>
                    <a asp-controller="Gallery" asp-action="Index" class="@(currentController == "Gallery" ? "active" : "")">
                        <i class="fas fa-images"></i> Gallery
                    </a>
                    <a asp-controller="About" asp-action="Index" class="@(currentController == "About" ? "active" : "")">
                        <i class="fas fa-info-circle"></i> About
                    </a>
                    <a asp-controller="Contact" asp-action="Index" class="@(currentController == "Contact" ? "active" : "")">
                        <i class="fas fa-envelope"></i> Contact
                    </a>
                }
                
                @if (isAuthenticated && !isAdmin)
                {
                    <a asp-controller="Book" asp-action="MyBookings" class="@(currentController == "Book" ? "active" : "")">
                        <i class="fas fa-calendar-check"></i> My Bookings
                    </a>
                }
                
                @if (isAdmin)
                {
                    <a asp-controller="Admin" asp-action="Index" class="@(currentController == "Admin" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")">
                        <i class="fas fa-chart-line"></i> Dashboard
                    </a>
                    <a asp-controller="Admin" asp-action="Rooms" class="@(currentController == "Admin" && ViewContext.RouteData.Values["Action"]?.ToString() == "Rooms" ? "active" : "")">
                        <i class="fas fa-bed"></i> Rooms Management
                    </a>
                    <a asp-controller="Admin" asp-action="Bookings" class="@(currentController == "Admin" && ViewContext.RouteData.Values["Action"]?.ToString() == "Bookings" ? "active" : "")">
                        <i class="fas fa-calendar-check"></i> Bookings Management
                    </a>
                }
            </div>

            <!-- Hamburger (mobile) -->
            <div class="hamburger d-md-none" id="hamburger">
                <i class="fas fa-bars"></i>
            </div>

            <!-- User Section -->
            <div class="user-section d-flex gap-2" id="user-section">
                @{
                    var loginUrl = Url.Action("Login", "Account");
                    var registerUrl = Url.Action("Register", "Account");
                }

                @if (isAuthenticated)
                {
                    <div class="user-dropdown">
                        <button class="user-dropdown-toggle" onclick="toggleUserDropdown()">
                            <i class="fas fa-user-circle"></i>
                            <span>@userName</span>
                            <i class="fas fa-chevron-down" style="font-size: 12px;"></i>
                        </button>
                        <div class="user-dropdown-menu" id="userDropdownMenu">
                            <a href="#">
                                <i class="fas fa-user"></i> Profile
                            </a>
                            @if (!isAdmin)
                            {
                                <a asp-controller="Book" asp-action="MyBookings">
                                    <i class="fas fa-calendar-alt"></i> My Bookings
                                </a>
                            }
                            @if (isAdmin)
                            {
                                <a asp-controller="Admin" asp-action="Index">
                                    <i class="fas fa-cog"></i> Admin Panel
                                </a>
                                <a asp-controller="Home" asp-action="Index">
                                    <i class="fas fa-home"></i> Back to Website
                                </a>
                            }
                            <a asp-controller="Home" asp-action="Privacy">
                                <i class="fas fa-shield-alt"></i> Privacy Policy
                            </a>
                            <div class="dropdown-divider"></div>
                            <form method="post" asp-controller="Account" asp-action="Logout" style="margin: 0;">
                                <button type="submit">
                                    <i class="fas fa-sign-out-alt"></i> Logout
                                </button>
                            </form>
                        </div>
                    </div>
                }
                else
                {
                    <!-- DEBUG: Login URL: @loginUrl | Register URL: @registerUrl -->

                    <a asp-controller="Account" asp-action="Login" data-debug-url="@loginUrl">
                        <i class="fas fa-sign-in-alt"></i> Login
                    </a>
                    <a asp-controller="Account" asp-action="Register" data-debug-url="@registerUrl">
                        <i class="fas fa-user-plus"></i> Register
                    </a>
                }
            </div>

        </div>
    </nav>


    <!-- HERO SECTION OUTSIDE ANY CONTAINER -->
    @RenderSection("Hero", required: false)

    <!-- PAGE CONTENT -->
    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <footer class="footer">
        <div class="footer-container">
            <div class="footer-about">
                <div class="footer-logo">
                    <div class="logo-box">GH</div>
                    <h2>Golden Horizon</h2>
                </div>
                <p>
                    A haven of elegance, comfort, and unforgettable experiences. Discover the perfect stay at Golden Horizon.
                </p>
            </div>

            <div class="footer-links">
                <h3>Quick Links</h3>
                <ul>
                    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a asp-controller="Room" asp-action="Index">Rooms</a></li>
                    <li><a asp-controller="Gallery" asp-action="Index">Gallery</a></li>
                    <li><a asp-controller="Contact" asp-action="Index">Contact</a></li>
                    <li><a asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                </ul>
            </div>

            <div class="footer-social">
                <h3>Follow Us</h3>
                <div class="social-icons">
                    <a href="#" aria-label="Facebook"><i class="fab fa-facebook-f"></i></a>
                    <a href="#" aria-label="Twitter"><i class="fab fa-twitter"></i></a>
                    <a href="#" aria-label="Instagram"><i class="fab fa-instagram"></i></a>
                </div>
            </div>
        </div>

        <div class="footer-bottom">
            &copy; @DateTime.Now.Year Golden Horizon Hotel. All rights reserved.
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        function toggleUserDropdown() {
            var dropdown = document.getElementById('userDropdownMenu');
            var dropdownContainer = document.querySelector('.user-dropdown');
            dropdown.classList.toggle('show');
            dropdownContainer.classList.toggle('show');
        }

        // Close dropdown when clicking outside
        window.onclick = function(event) {
            if (!event.target.matches('.user-dropdown-toggle') && !event.target.closest('.user-dropdown-toggle')) {
                var dropdowns = document.getElementsByClassName("user-dropdown-menu");
                var dropdownContainers = document.getElementsByClassName("user-dropdown");
                for (var i = 0; i < dropdowns.length; i++) {
                    var openDropdown = dropdowns[i];
                    if (openDropdown.classList.contains('show')) {
                        openDropdown.classList.remove('show');
                        if (dropdownContainers[i]) {
                            dropdownContainers[i].classList.remove('show');
                        }
                    }
                }
            }
        }

        // Hamburger menu toggle
        document.addEventListener('DOMContentLoaded', function() {
            const hamburger = document.getElementById('hamburger');
            const navLinks = document.getElementById('nav-links');

            if (hamburger && navLinks) {
                hamburger.addEventListener('click', function() {
                    navLinks.classList.toggle('active');
                });
            }
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
