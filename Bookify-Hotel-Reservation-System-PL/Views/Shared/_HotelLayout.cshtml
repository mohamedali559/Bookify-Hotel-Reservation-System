<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.title</title>
    <link rel="icon" type="image/png" href="https://cdn-icons-png.flaticon.com/512/2357/2357000.png">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/LayoutStyle.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="https://cdn.tailwindcss.com"></script>
    @await RenderSectionAsync("Styles", required: false)

</head>

<body>
    <nav class="fixed w-full z-50 bg-gradient-to-r from-[#2e2b29] to-[#2e2b29]/90 backdrop-blur-md border-b border-[#a8926b]/20">
        <div class="max-w-7xl mx-auto px-5 py-3 flex items-center justify-between">
            <div class="flex items-center space-x-3">
                <div class="bg-[#cbb58f] text-[#2e2b29] font-bold px-3 py-1 rounded-lg">GH</div>
                <h1 class="text-lg font-semibold" id="HotelName">Golden Horizon</h1>
            </div>

            <div class="hidden md:flex items-center space-x-8 text-[#e5e3df]">
                <a href="index.html" class="hover:text-[#cbb58f] transition">Home</a>
                <a href="rooms.html" class="hover:text-[#cbb58f] transition">Rooms</a>
                <a href="amenities.html" class="hover:text-[#cbb58f] transition">Amenities</a>
                <a href="gallery.html" class="hover:text-[#cbb58f] transition">Gallery</a>
                <a href="about.html" class="hover:text-[#cbb58f] transition">About</a>
                <a href="contact.html" class="hover:text-[#cbb58f] transition">Contact</a>
                <a href="_Layout.html" class="hover:text-[#cbb58f] transition">Layout</a>
            </div>

            <div class="flex items-center space-x-4">

                <button class="bg-[#cbb58f] text-[#2e2b29] px-4 py-2 rounded-lg font-medium hover:bg-[#d7c29b] transition">
                    Book Now
                </button>
            </div>
        </div>
    </nav>

    <!-- HERO SECTION OUTSIDE ANY CONTAINER -->
    @RenderSection("Hero", required: false)

    <!-- PAGE CONTENT -->
    <div class="container pt-10 max-w-full mx-auto px-5 mt-12">
        <main role="main" class="pb-1">
            @RenderBody()
        </main>
    </div>




    <footer class="border-top footer text-muted">
        <div class="footer-container">
            <div class="footer-about">
                <div class="footer-logo">
                    <div class="logo-box">GH</div>
                    <h2>Golden Horizon</h2>
                </div>
                <p>
                    A haven of elegance, comfort, and unforgettable experiences. Discover the perfect stay at Golden
                    Horizon.
                </p>
            </div>

            <div class="footer-links">
                <h3>Quick Links</h3>
                <ul>
                    <li><a href="#">Home</a></li>
                    <li><a href="#">Rooms</a></li>
                    <li><a href="#">Gallery</a></li>
                    <li><a href="#">Contact</a></li>
                </ul>
            </div>

            <div class="footer-social">
                <h3>Follow Us</h3>
                <div class="social-icons">
                    <a href="#"><i class="fab fa-facebook-f"></i></a>
                    <a href="#"><i class="fab fa-twitter"></i></a>
                    <a href="#"><i class="fab fa-instagram"></i></a>
                </div>
            </div>
        </div>
        <div class="footer-bottom">
            © 2025 Golden Horizon. All rights reserved.
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>