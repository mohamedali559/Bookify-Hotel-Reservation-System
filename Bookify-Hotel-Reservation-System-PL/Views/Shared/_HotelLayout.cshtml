<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.title</title>
    <link rel="icon" type="image/png" href="https://cdn-icons-png.flaticon.com/512/2357/2357000.png">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/LayoutStyle.css" />
    @await RenderSectionAsync("Styles", required: false)
</head>

<body>
    <nav class="navbar">
        <div class="navbar-container">
            <div class="logo-section">
                <div class="logo-box">GH</div>
                <h1 class="logo-text">Golden Horizon</h1>
            </div>

            <div class="nav-links" id="nav-links">
                <a asp-controller="Home" asp-action="Index">Home</a>
                <a asp-controller="Room" asp-action="Index">Rooms</a>
                <a asp-controller="Amenities" asp-action="Index">Amenities</a>
                <a asp-controller="Gallery" asp-action="Index">Gallery</a>
                <a asp-controller="About" asp-action="Index" class="active">About</a>
                <a asp-controller="Contact" asp-action="Index">Contact</a>
            </div>
            <div class="hamburger" id="hamburger">
                <i class="fas fa-bars"></i>
            </div>

            <div class="user-section" id="user-section">
                <a asp-controller="Account" asp-action="Login">Log In</a>
            </div>
        </div>
    </nav>

    <!-- HERO SECTION OUTSIDE ANY CONTAINER -->
    @RenderSection("Hero", required: false)

    <!-- PAGE CONTENT -->
    <div class="container pt-10 max-w-full mx-auto px-5 mt-12">
        <main role="main" class="pb-1">
            @RenderBody()
        </main>
    </div>





    <footer class="footer">
        <div class="footer-container">
            <div class="footer-about">
                <div class="footer-logo">
                    <div class="logo-box">GH</div>
                    <h2>Golden Horizon</h2>
                </div>
                <p>
                    A haven of elegance, comfort, and unforgettable experiences. Discover the perfect stay at Golden Horizon.
                </p>
            </div>

            <div class="footer-links">
                <h3>Quick Links</h3>
                <ul>
                    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a asp-controller="Rooms" asp-action="Index">Rooms</a></li>
                    <li><a asp-controller="Gallery" asp-action="Index">Gallery</a></li>
                    <li><a asp-controller="Contact" asp-action="Index">Contact</a></li>
                </ul>
            </div>

            <div class="footer-social">
                <h3>Follow Us</h3>
                <div class="social-icons">
                    <a href="#"><i class="fab fa-facebook-f"></i></a>
                    <a href="#"><i class="fab fa-twitter"></i></a>
                    <a href="#"><i class="fab fa-instagram"></i></a>
                </div>
            </div>
        </div>

        <div class="footer-bottom">
            © 2025 Golden Horizon. All rights reserved.
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>